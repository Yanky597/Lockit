<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mcon521.lockit">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Lockit">
        <activity
            android:name=".activities.SetLoginPassword"
            android:label="@string/title_activity_set_login_password"
            android:theme="@style/Theme.Lockit.NoActionBar"></activity>
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/Theme.Lockit.NoActionBar.Dialog" />
        <activity
            android:name=".activities.SplashActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.EdityEntry"
            android:theme="@style/Theme.Lockit.NoActionBar.Dialog" />
        <activity
            android:name=".activities.My_Passwords"
            android:label="@string/app_name"
            android:theme="@style/Theme.Lockit.NoActionBar" />
        <activity
            android:name=".activities.Create_Entry"
            android:label="@string/app_name"
            android:theme="@style/Theme.Lockit.NoActionBar" />
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Lockit.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.Create_Password"
            android:label="@string/app_name"
            android:theme="@style/Theme.Lockit.NoActionBar" />
    </application>

</manifest>